  <!-- Scripts -->
  <script>
    // Préview simple
    const photoInput = document.getElementById('photoInput');
    const preview = document.getElementById('preview');
    const previewImg = document.getElementById('previewImg');
    const vibeSelect = document.getElementById('vibeSelect');
    const validateBtn = document.getElementById('validateBtn');
    const validationMsg = document.getElementById('validationMsg');
    const paypalArea = document.getElementById('paypal-area');
    const clearBtn = document.getElementById('clearBtn');

    let uploadedFile = null;
    photoInput.addEventListener('change', (e) => {
      const f = e.target.files[0];
      if (!f) return;
      if (!f.type.startsWith('image/')) {
        showMsg('Choisis une image valide.');
        return;
      }
      uploadedFile = f;
      const url = URL.createObjectURL(f);
      previewImg.src = url;
      preview.style.display = 'block';
      hideMsg();
    });

    clearBtn.addEventListener('click', () => {
      photoInput.value = '';
      vibeSelect.value = '';
      preview.style.display = 'none';
      previewImg.src = '';
      uploadedFile = null;
      paypalArea.style.display = 'none';
      hideMsg();
      // remove existing paypal button if any
      const cont = document.getElementById('paypal-container-3X2X2XWSY8CPQ');
      cont.innerHTML = '';
    });

    function showMsg(txt) {
      validationMsg.style.display = 'block';
      validationMsg.innerText = txt;
    }
    function hideMsg() {
      validationMsg.style.display = 'none';
    }

    // Au clic "Procéder au paiement" : validation et rendu du bouton PayPal Hosted
    validateBtn.addEventListener('click', () => {
      if (!uploadedFile) { showMsg('Tu dois choisir une photo avant de payer.'); return; }
      if (!vibeSelect.value) { showMsg('Choisis un style (vibe).'); return; }
      hideMsg();

      // Montre la zone PayPal et render le hosted button.
      paypalArea.style.display = 'block';

      // Supprime bouton existant si rendu déjà
      const cont = document.getElementById('paypal-container-3X2X2XWSY8CPQ');
      cont.innerHTML = '';

      // Render Hosted Button fourni (hostedButtonId fourni dans le code)
      // IMPORTANT: hostedButtonId doit correspondre à ton bouton PayPal (3X2X2XWSY8CPQ)
      if (window.paypal && paypal.HostedButtons) {
        paypal.HostedButtons({
          hostedButtonId: "3X2X2XWSY8CPQ",
          // Optionnel : callbacks si tu veux capturer l'event localement
          onInit: function(data, actions) {
            // tu peux activer / désactiver le bouton PayPal en fonction d'une validation si besoin
            // actions.enable(); // par défaut activé
          },
          onClick: function(data, actions) {
            // Ici, tu peux envoyer les métadonnées (vibe) au serveur si tu as une API.
            // Exemple : envoyer via fetch() la vibe choisie et un identifiant temporaire.
            // Nous ne gérons pas l'upload côté client post-payment dans ce code minimal.
            console.log('PayPal button clicked — vibe:', vibeSelect.value);
          },
          onApprove: function(data, actions) {
            // Ce callback est appelé après approbation par PayPal (côté Hosted Buttons).
            // Hosted Buttons va rediriger ou compléter selon la config de ton compte PayPal.
            console.log('PayPal approuvé', data);
            // Ici, tu peux afficher un message ou rediriger vers une page "Merci" / "Récupérer tes looks".
            alert('Paiement réussi ! Tu seras redirigé(e) vers la page de récupération des looks (à configurer).');
            // TODO: rediriger vers page de récupération / lancer traitement IA côté serveur
          }
        }).render("#paypal-container-3X2X2XWSY8CPQ");
      } else {
        showMsg('Erreur PayPal SDK. Recharge la page et réessaie.');
      }
    });
  </script>
